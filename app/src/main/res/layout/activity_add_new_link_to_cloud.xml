    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:orientation="vertical"
    tools:context=".AddNewLinkToCloud">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TableRow android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/tv_linkname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/LinkNameHeading"
                    android:textColor="#444"
                    android:textSize="22sp"
                    tools:layout_editor_absoluteX="28dp"
                    tools:layout_editor_absoluteY="52dp" />

                <EditText
                    android:id="@+id/edt_linkname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/layout_border"
                    android:hint="@string/LinkNameHint"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxWidth="200dp"
                    android:padding="5dp"
                    android:textSize="22sp"
                    tools:layout_editor_absoluteX="325dp"
                    tools:layout_editor_absoluteY="52dp" />

                <ImageButton
                    android:id="@+id/iBtn_LinkName"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:adjustViewBounds="true"
                    android:backgroundTint="@android:color/transparent"
                    android:contentDescription="@string/LinkNameToolTip"
                    android:longClickable="true"
                    android:scaleType="fitCenter"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    app:srcCompat="@drawable/question_icon" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/NewNameHeading"
                    android:textColor="#444"
                    android:textSize="22sp" />

                <EditText
                    android:id="@+id/edt_LinkNewName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/layout_border"
                    android:hint="@string/NewNameHint"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxWidth="200dp"
                    android:padding="5dp"
                    android:textSize="22sp" />

                <ImageButton
                    android:id="@+id/iBtn_NewName"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:adjustViewBounds="true"
                    android:backgroundTint="@android:color/transparent"
                    android:contentDescription="@string/NewNameToolTip"
                    android:longClickable="true"
                    android:scaleType="fitCenter"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    app:srcCompat="@drawable/question_icon" />
            </TableRow>

            <TableRow
                android:layout_height="28dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/TankHeading"
                    android:textColor="#444"
                    android:textSize="22sp"
                    tools:layout_editor_absoluteX="29dp"
                    tools:layout_editor_absoluteY="111dp" />

