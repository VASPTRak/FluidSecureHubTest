<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:id="@+id/layout_reader_status"
                >

                <TextView
                    android:id="@+id/tv_reader_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text=""
                    android:textAllCaps="false"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/Red"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/tv_hf_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text=""
                    android:textAllCaps="false"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/Red"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/tv_lf_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text=""
                    android:textAllCaps="false"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/Red"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/tv_mag_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text=""
                    android:textAllCaps="false"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/Red"
                    android:textSize="18dp" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginBottom="15dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/etInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:hint="input command"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_fobkey"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:text="@string/no_data"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="14dp" />

                <Button
                    android:id="@+id/btn_ReadFobAgain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:background="@color/colorFluid"
                    android:text="@string/ReadAccessDeviceAgain"
                    android:textColor="@color/white"
                    android:textSize="@dimen/go_button_text" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/vehicleIdentification"
                    android:textAllCaps="false"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/black"
                    android:textSize="@dimen/heading_text"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tv_fob_Reader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/PresentVehicleAccessDevice"
                    android:textAllCaps="false"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/black"
                    android:textSize="@dimen/go_button_text" />

                <TextView
                    android:id="@+id/tv_or"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/OR"
                    android:textColor="@color/Red"
                    android:textSize="40sp"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_dont_have_fob"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:text="@string/EnterVehicleId"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="@dimen/go_button_text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="90dp"
                android:layout_marginLeft="90dp"
                android:id="@+id/Linear_layout_vehicleNumber"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/tv_enter_vehicle_no"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:paddingLeft="80dp"
                    android:paddingRight="80dp"
                    android:layout_marginBottom="20dp"
                    android:text="@string/PleaseWait"
                    android:textColor="#808080"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="35dp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_vehicle_no_below"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="@string/VehicleNumberHeading"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="35dp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/tv_fob_number"
                    android:gravity="left"
                    android:visibility="gone"
                    android:text="Access Device:"
                    android:textSize="@dimen/date_text" />



                <EditText
                    android:id="@+id/editVehicleNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="55dp"
                    android:layout_marginLeft="55dp"
                    android:background="@color/colorFluid"
                    android:layout_gravity="center_horizontal"
                    android:imeOptions="actionDone"
                    android:inputType="number|text"
                    android:gravity="center"
                    android:maxLength="20"
                    android:padding="5sp"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/white"
                    android:textColorHint="#fff"
                    android:textSize="@dimen/edit_text" />


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:id="@+id/Linear_layout_Save_back_buttons"
                android:layout_marginTop="20dp"
                android:layout_marginRight="90dp"
                android:layout_marginLeft="90dp"
                android:layout_marginBottom="12dp"
                android:weightSum="2"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:layout_gravity="center_horizontal"
                    android:onClick="cancelAction"
                    android:layout_weight="1"
                    android:background="@color/backbtn"
                    android:text="@string/previousScreen"
                    android:textSize="@dimen/previous_button_text"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="25dp"
                    android:layout_weight="1"
                    android:background="@color/colorFluid"
                    android:onClick="saveButtonAction"
                    android:text="@string/EnterBtn"
                    android:textColor="@color/white"
                    android:textSize="@dimen/go_button_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="90dp"
                android:layout_marginLeft="90dp"
                android:layout_marginBottom="90dp"
                android:orientation="vertical"
                android:layout_gravity="center">

                <Button
                    android:id="@+id/btnFStag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/colorFluid"
                    android:text="@string/UseFSTag"
                    android:textColor="@color/white"
                    android:textSize="@dimen/go_button_text" />

                <Button
                    android:id="@+id/btn_barcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:background="@color/colorFluid"
                    android:text="@string/UseOnScreenBarcode"
                    android:textColor="@color/white"
                    android:textSize="@dimen/go_button_text" />


            </LinearLayout>




        </LinearLayout>



    </ScrollView>

    <!-- menu bar -->
    <include
        layout="@layout/activity_footer_keybord"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



</RelativeLayout>